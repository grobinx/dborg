    "i18next-http-backend": "^3.0.2",
    "immer": "^10.1.1",
    "lru-cache": "^11.1.0",
    "luxon": "^3.5.0",
    "monaco-editor": "^0.52.2",
    "node-sql-parser": "^5.3.7",
    "notistack": "^3.0.2",
    "pattern-transformer": "^1.0.5",
    "pg": "^8.13.3",
    "pg-cursor": "^2.12.3",
    "react-bootstrap-icons": "^1.11.5",
    "react-color": "^2.19.3",
    "react-i18next": "^15.7.3",
