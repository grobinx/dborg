{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/api/**/*",
    "plugins/*/renderer/**/*",
    "plugins/*/common/**/*"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    },
    "noUnusedLocals": false,
    "lib": ["es2021", "dom"] // Dodano 'es2021', aby obsługiwać replaceAll
  }
}